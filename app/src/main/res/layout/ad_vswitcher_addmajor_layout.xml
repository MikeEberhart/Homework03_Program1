<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/sp_vsAddNewMajor_majorPrefix"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vsAddNewMajor_majorPrefixLabel" />

    <EditText
        android:id="@+id/et_vsAddNewMajor_majorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vsAddNewMajor_majorNameLabel" />

    <TextView
        android:id="@+id/tv_vsAddNewMajor_majorNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Major Name:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_vsAddNewMajor_majorNameError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:text="Major Prefix:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_vsAddNewMajor_majorPrefixError"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_vsAddNewMajor_majorName" />

    <ImageView
        android:id="@+id/iv_vsAddNewMajor_backBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_rounded_edges"
        android:backgroundTint="@color/lions_blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/back_btn_blk" />

    <ImageView
        android:id="@+id/iv_vsAddNewMajor_addNewMajorBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_rounded_edges"
        android:backgroundTint="@color/lions_blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_btn_blk" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="50dp"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/sp_vsAddNewMajor_majorPrefix"
        app:layout_constraintStart_toStartOf="@+id/sp_vsAddNewMajor_majorPrefix"
        app:layout_constraintTop_toTopOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/corner_arrow" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="50dp"
        android:rotation="90"
        android:rotationY="180"
        app:layout_constraintBottom_toTopOf="@+id/sp_vsAddNewMajor_majorPrefix"
        app:layout_constraintEnd_toEndOf="@+id/sp_vsAddNewMajor_majorPrefix"
        app:layout_constraintTop_toTopOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/corner_arrow" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="50dp"
        android:rotation="90"
        app:layout_constraintBottom_toTopOf="@+id/et_vsAddNewMajor_majorName"
        app:layout_constraintStart_toStartOf="@+id/et_vsAddNewMajor_majorName"
        app:layout_constraintTop_toTopOf="@+id/tv_vsAddNewMajor_majorNameLabel"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/corner_arrow" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="50dp"
        android:rotation="90"
        android:rotationY="180"
        app:layout_constraintBottom_toTopOf="@+id/et_vsAddNewMajor_majorName"
        app:layout_constraintEnd_toEndOf="@+id/et_vsAddNewMajor_majorName"
        app:layout_constraintTop_toTopOf="@+id/tv_vsAddNewMajor_majorNameLabel"
        app:layout_constraintVertical_bias="0.75"
        app:srcCompat="@drawable/corner_arrow" />

    <TextView
        android:id="@+id/tv_vsAddNewMajor_majorNameError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Major Already Exists"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/et_vsAddNewMajor_majorName"
        app:layout_constraintEnd_toEndOf="@+id/tv_vsAddNewMajor_majorNameLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_vsAddNewMajor_majorNameLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_vsAddNewMajor_majorNameLabel"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tv_vsAddNewMajor_majorPrefixError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Must Choose Prefix"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toTopOf="@+id/sp_vsAddNewMajor_majorPrefix"
        app:layout_constraintEnd_toEndOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_vsAddNewMajor_majorPrefixLabel"
        tools:visibility="invisible" />
</androidx.constraintlayout.widget.ConstraintLayout>