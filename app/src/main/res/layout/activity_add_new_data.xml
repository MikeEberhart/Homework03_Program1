<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewDataActivity">

    <TextView
        android:id="@+id/tv_vAddNewData_headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add New Student"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/vs_vAddNewData_viewSwitcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewSwitcher
        android:id="@+id/vs_vAddNewData_viewSwitcher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/listview_rounded_edges"
        app:layout_constraintBottom_toTopOf="@+id/iv_vAddNewData_homeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_vAddNewData_headerText">

    </ViewSwitcher>

    <ImageView
        android:id="@+id/iv_vAddNewData_homeBtn"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_rounded_edges"
        android:backgroundTint="@color/lions_blue"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/vs_vAddNewData_viewSwitcher"
        app:layout_constraintStart_toStartOf="@+id/vs_vAddNewData_viewSwitcher"
        app:layout_constraintTop_toBottomOf="@+id/vs_vAddNewData_viewSwitcher"
        app:srcCompat="@drawable/home_btn_blk" />

</androidx.constraintlayout.widget.ConstraintLayout>